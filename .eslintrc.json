{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": "error",
        "react/jsx-filename-extesion": [1, {"extensions": [".js", ".tsx"]}],
        "react/prop-types": "off",
        "react/jsx-props-no-spreading": ["error",{
          "html": "ignore",
          "custom": "ignore",
          "exceptions": [""]
        }],
        "react/react-in-jsx-scope": "off"
    }
}
